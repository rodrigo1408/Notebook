<%= form_for(@contact, html: {class: "basic-grey"} ) do |form| %>
  <h1><%= @contact.model_name.human %></h1>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :contact_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :contact_email %>
  </div>

  <div class="field">
    <%= form.label :kind_id %>
    <%= collection_select(:contact, :kind_id, @kind_options_for_select, :id, :description) %>
  </div>
  
<%= form.fields_for :address do |address_fields| %>
   <div class="field">
      <%= address_fields.label :street %>
      <%= address_fields.text_field :street %>
   </div>
   <div class="field">
      <%= address_fields.label :city %>
      <%= address_fields.text_field :city %>
   </div>
   <div class="field">
      <%= address_fields.label :state %>
      <%= address_fields.select :state, options_for_states(@contact.address.state) %>
   </div>
<% end %>

<div id="phones">
  <%= form.fields_for :phones do |phones_fields| %>
     <%= render partial: "phone_fields", locals: { f: phones_fields } %>
  <% end %>

  <%= link_to_add_association('[Adicionar Telefone]', form, :phones) %>
</div>

  <div class="field">
    <%= form.label :rmk %>
    <%= form.text_area :rmk, id: :contact_rmk %>
  </div>

  <div class="actions">
    <%= form.submit t('buttons.save'), class: "button"%>
    <%= link_to 'Voltar', contacts_path, class: "button-back"%>
  </div>

  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{pluralize(@contact.errors.count, 'error')} #{t('messages.errors')}:" %> </h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
